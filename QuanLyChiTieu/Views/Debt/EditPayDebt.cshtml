@model PayDebtViewModel

@{
    ViewData["Title"] = "Cập nhật giao dịch trả/thu nợ";
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<div class="container mb-3 p-4">
    <h3 class="fs-1">Cập nhật Giao dịch với @Model.PartnerName</h3>

    <form asp-action="EditPayDebt" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="PartnerId" />
        <input type="hidden" asp-for="PartnerName" />
        <input type="hidden" asp-for="NetDebtAmount" />

        <div class="mb-3">
            <label asp-for="InDebt" class="form-label">Hành động</label>
            <select asp-for="InDebt" class="form-select">
                <option value="true" selected="@(Model.InDebt)">Trả nợ</option>
                <option value="false" selected="@(!Model.InDebt)">Thu nợ</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Số tiền (VNĐ)</label>
            <div class="input-group">
                <input asp-for="Amount" value="@Math.Round(Model.Amount)" id="AmountInput" class="form-control text-end" placeholder="0" required />
                <span class="input-group-text">VNĐ</span>
            </div>
            <div class="invalid-feedback">Vui lòng nhập số tiền.</div>
        </div>

        <div class="mb-3">
            <label asp-for="PaymentDate" class="form-label">Ngày</label>
            <input asp-for="PaymentDate" type="date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Ghi chú</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-1">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="DebtHistory" asp-route-partnerId="@Model.PartnerId" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    <script>
        const input = document.getElementById("AmountInput");
        input.addEventListener("input", function () {
            let value = this.value.replace(/,/g, "").replace(/[^\d]/g, "");
            if (value) {
                this.value = Number(value).toLocaleString("en-US");
            } else {
                this.value = "";
            }
        });

        input.dispatchEvent(new Event("input"));

        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        input.value = input.value.replace(/,/g, "");
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
