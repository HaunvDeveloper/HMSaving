@{
    ViewData["Title"] = "Quản lý hũ chi tiêu";
}
<div class="container mb-3 p-3 position-relative">
    <h2 class="text-center text-uppercase">Danh sách hũ chi tiêu <strong class="month-name text-success"></strong></h2>
    <div class="d-flex align-items-center mt-1 flex-wrap justify-content-center mx-5 mb-3">
        <div class="me-3">
            Chọn tháng:
            <input type="month" id="monthInput" class="form-control" />
        </div>
        <div class="d-flex gap-2 mt-4 me-3">
            <button id="previousMonth" class=" btn btn-primary">
                <i class="bi bi-skip-start-fill"></i>
            </button>
            <button id="currentMonth" class=" btn btn-primary">
                <i class="bi bi-table"></i> Hiện tại
            </button>
            <button id="nextMonth" class=" btn btn-primary">
                <i class="bi bi-skip-end-fill"></i>
            </button>
        </div>

    </div>
    <div class="mb-3 d-none d-md-block">
        <button id="btnAddDesktop" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Thêm
        </button>
    </div>

    <div id="jarContainer"></div>

    <button id="btnAddMobile"
            class="btn btn-primary rounded-circle shadow-lg d-md-none"
            style="position: fixed; bottom: 20px; right: 20px; width: 60px; height: 60px; z-index:1000;">
        <i class="bi bi-plus-lg fs-4"></i>
    </button>
</div>

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    
}

@section Scripts {
    <script>
        const monthInput = document.getElementById("monthInput");
        const previousBtn = document.getElementById("previousMonth");
        const currentBtn = document.getElementById("currentMonth");
        const nextBtn = document.getElementById("nextMonth");

        // Hàm khởi tạo giá trị mặc định là tháng hiện tại
        document.addEventListener("DOMContentLoaded", () => {
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            monthInput.value = `${year}-${month}`;
            loadData(); // Gọi hàm load mặc định
        });

        // Sự kiện Previous
        previousBtn.addEventListener("click", () => {
            const date = new Date(monthInput.value + "-01");
            date.setMonth(date.getMonth() - 1);
            updateMonthInput(date);
        });

        // Sự kiện Next
        nextBtn.addEventListener("click", () => {
            const date = new Date(monthInput.value + "-01");
            date.setMonth(date.getMonth() + 1);
            updateMonthInput(date);
        });

        // Sự kiện Hiện tại
        currentBtn.addEventListener("click", () => {
            const today = new Date();
            updateMonthInput(today);
        });

        // Cập nhật giá trị input và gọi hàm load
        function updateMonthInput(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            monthInput.value = `${year}-${month}`;
            loadData();
        }

        function loadData() {
            var dateValue = document.getElementById("monthInput").value;
            // Kiểm tra xem người dùng đã chọn tháng chưa, nếu chưa chọn tháng hiện tại

            if (!dateValue) {
                const today = new Date();
                const year = today.getFullYear();
                const month = String(today.getMonth() + 1).padStart(2, '0'); // Tháng bắt đầu từ 0
                dateValue = `${year}-${month}`;
            }

            const [year, month] = dateValue.split("-");
            // Cập nhật tiêu đề tháng
            document.querySelector('.month-name').textContent = `tháng ${month} năm ${year}`;
            $.ajax({
                    url: '@Url.Action("_GetJarByMonth", "Jar")',
                    type: 'GET',
                    data: { month: month, year: year },
                    beforeSend: function() {
                        $('#jarContainer').html('<p>Đang tải dữ liệu...</p>');
                    },
                    success: function (result) {
                        $('#jarContainer').html(result);
                    },
                    error: function () {
                        alert('Có lỗi khi tải dữ liệu.');
                    }
                });
        }
        loadData();
    </script>
    <script>
        $(document).ready(function () {
            
            // Nút Thêm desktop
            $('#btnAddDesktop').click(function () {
                showAddOptions();
            });

            // Nút Thêm mobile
            $('#btnAddMobile').click(function () {
                showAddOptions();
            });

            // SweetAlert2 chọn thêm loại giao dịch
            function showAddOptions() {
                Swal.fire({
                    title: 'Bạn muốn thêm gì?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Thêm Thu Nhập',
                    cancelButtonText: 'Thêm Chi Tiêu',
                    reverseButtons: true,
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger me-3'
                    },
                    buttonsStyling: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '@Url.Action("CreateIncome", "Transaction")';
                    } else if (result.dismiss === Swal.DismissReason.cancel) {
                        window.location.href = '@Url.Action("CreateExpense", "Transaction")';
                    }
                });
            }
        });

    </script>
    <script>
       $(document).on('click', '.btnAddJar', function () {
             Swal.fire({
             title: 'Nhập tên hũ',
             input: 'text',
             inputLabel: 'Tên hũ chi tiêu',
             inputPlaceholder: 'VD: Tiết kiệm, Mua sắm...',
             showCancelButton: true,
             confirmButtonText: 'Thêm',
             cancelButtonText: 'Hủy',
             inputValidator: (value) => {
                 if (!value) {
                     return 'Bạn chưa nhập tên hũ!';
                 }
             }
         }).then((result) => {
             if (result.isConfirmed) {
                 const jarName = result.value;

                 // Gửi request POST đến action Create
                 $.ajax({
                     url: '/JarInfo/Create',
                     method: 'POST',
                     data: {
                         JarName: jarName
                     },
                     success: function (response) {
                         showToast('success', 'Thành công');
                          window.location.reload();
                     },
                     error: function (xhr) {
                         Swal.fire('Lỗi', xhr.responseText || 'Không thể thêm hũ.', 'error');
                     }
                 });
             }
         });
        });
    </script>
}
