@model List<QuanLyChiTieu.ViewModels.PartnerDebtViewModel>
@using System.Globalization
@{
    var culture = new CultureInfo("vi-VN");
}
<div class="row p-3">
    @foreach (var item in Model)
    {
        <div class="col-12 mb-3">
            <div class="card shadow-sm border-@((item.NetDebtAmount >= 0) ? "success" : "danger")">
                <div class="card-body d-flex align-items-center justify-content-between flex-wrap">
                    <div>
                        <h5 class="card-title">@item.PartnerName</h5>
                        <p class="card-text">
                            @if (item.NetDebtAmount > 0)
                            {
                                <span class="text-success">Đang thiếu bạn:</span>
                            }
                            else if (item.NetDebtAmount < 0)
                            {
                                <span class="text-danger">Bạn đang nợ:</span>
                            }
                            else
                            {
                                <span class="text-success">Không có công nợ: </span>
                                ;
                            }
                            <strong>@Math.Abs(item.NetDebtAmount).ToString("C", culture) VNĐ</strong>
                        </p>
                    </div>
                    
                    <div>

                        
                        @if (item.NetDebtAmount > 0)
                        {
                            <a asp-action="PayDebt" asp-route-partnerId="@item.PartnerId" asp-route-in-debt="0" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-cash-coin"></i> Thu Nợ
                            </a>
                        }
                        else if (item.NetDebtAmount < 0)
                        {
                            <a asp-action="PayDebt" asp-route-partnerId="@item.PartnerId" asp-route-in-debt="1" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-wallet2"></i> Trả Nợ
                            </a>
                        }
                        
                            <a asp-action="CreateDebt" asp-route-partnerId="@item.PartnerId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-wallet2"></i> Thêm Nợ
                            </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

