@model QuanLyChiTieu.ViewModels.CreateExpenseViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Chi Tiêu";
}

<div class="container mt-4 p-3">
    <h2 class="mb-4">
        <i class="bi bi-pencil-square"></i> Chỉnh sửa Chi Tiêu
    </h2>

    <form asp-action="EditExpense" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="ExpenseId" />
        <div class="mb-3">
            <label asp-for="JarId" class="form-label">Hũ Chi Tiêu</label>
            <select asp-for="JarId" class="form-select" asp-items="Model.Jars" required>
                <option value="">-- Chọn hũ --</option>
            </select>
            <div class="invalid-feedback">
                Vui lòng chọn hũ chi tiêu.
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="ExpenseDate" class="form-label">Ngày Chi</label>
            <input asp-for="ExpenseDate" class="form-control" type="date" required />
            <div class="invalid-feedback">
                Vui lòng chọn ngày chi.
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Số tiền</label>
            <div class="input-group">
                <input id="AmountInput" name="Amount" class="form-control text-end" placeholder="0" value="@Model.Amount.ToString("N0")" required />
                <span class="input-group-text">VNĐ</span>
                <div class="invalid-feedback">
                    Vui lòng nhập số tiền.
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập ghi chú..." required></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Lưu Thay Đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Bootstrap validation
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    } else {
                        const amountInput = document.getElementById('AmountInput');
                        amountInput.value = amountInput.value.replace(/,/g, '');
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Format số tiền realtime
        const amountInput = document.getElementById('AmountInput');
        amountInput.addEventListener('input', function (e) {
            let value = this.value.replace(/,/g, '').replace(/[^\d]/g, '');
            if (value) {
                this.value = Number(value).toLocaleString('en-US');
            } else {
                this.value = '';
            }
        });
    </script>
}
