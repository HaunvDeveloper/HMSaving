@{
    ViewData["Title"] = "Thống kê chi tiêu hàng ngày";
    long tienAnId = ViewBag.TienAnId as long? ?? 0;
}
@section Links{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" integrity="sha256-Qsx5lrStHZyR9REqhUF8iQt73X06c8LGIUPzpOhwRrI=" crossorigin="anonymous"><!--end::Third Party Plugin(Bootstrap Icons)--><!--begin::Required Plugin(AdminLTE)-->
    <link href="~/css/dayly.css" rel="stylesheet" asp-append-version="true" />
}
<div class="d-flex align-items-center mt-1 flex-wrap justify-content-center mx-5">
    <div class="me-3">
        Chọn tháng:
        <input type="month" id="monthInput" class="form-control" onchange="loadEatingStats()" />
    </div>
    <div class="d-flex gap-2 mt-4 me-3">
        <button id="previousMonth" class=" btn btn-primary">
            <i class="bi bi-skip-start-fill"></i>
        </button>
        <button id="currentMonth" class=" btn btn-primary">
            <i class="bi bi-table"></i> Hiện tại
        </button>
        <button id="nextMonth" class=" btn btn-primary">
            <i class="bi bi-skip-end-fill"></i>
        </button>
    </div>

</div>


<div class="container">


    <div class="mb-3 d-none d-md-block">
        <button id="btnAddDesktop" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Thêm
        </button>
    </div>
    <div id="statsContainer" class="mb-3 p-1 d-flex flex-column justify-content-center"></div>
    <button id="btnAddMobile"
            class="btn btn-primary rounded-circle shadow-lg d-md-none"
            style="position: fixed; bottom: 20px; right: 20px; width: 60px; height: 60px; z-index:1000;">
        <i class="bi bi-plus-lg fs-4"></i>
    </button>

</div>
<!-- Modal hiển thị chi tiết ngày -->
<div class="modal fade" id="dayDetailModal" tabindex="-1" aria-labelledby="dayDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="dayDetailModalLabel">Chi tiết ngày</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <p class="fs-4"><strong>Ngày:</strong> <span id="modalDate"></span></p>
                <p class="fs-4"><strong>Tiền ăn:</strong> <span id="modalAverage" class="text-primary fw-bold"></span></p>
                <p class="fs-4"><strong>Chi tiêu:</strong> <span id="modalSpent" class="text-danger fw-bold"></span></p>
                <p class="fs-4"><strong>Còn lại:</strong> <span id="modalDifference" class=" fw-bold"></span></p>
            </div>
            <div class="modal-footer">
                <button id="viewDetailBtn" class="btn btn-success me-2">Xem chi tiết</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        const monthInput = document.getElementById("monthInput");
        const previousBtn = document.getElementById("previousMonth");
        const currentBtn = document.getElementById("currentMonth");
        const nextBtn = document.getElementById("nextMonth");

        // Hàm khởi tạo giá trị mặc định là tháng hiện tại
        document.addEventListener("DOMContentLoaded", () => {
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            monthInput.value = `${year}-${month}`;
            loadEatingStats(); // Gọi hàm load mặc định
        });

        // Sự kiện Previous
        previousBtn.addEventListener("click", () => {
            const date = new Date(monthInput.value + "-01");
            date.setMonth(date.getMonth() - 1);
            updateMonthInput(date);
        });

        // Sự kiện Next
        nextBtn.addEventListener("click", () => {
            const date = new Date(monthInput.value + "-01");
            date.setMonth(date.getMonth() + 1);
            updateMonthInput(date);
        });

        // Sự kiện Hiện tại
        currentBtn.addEventListener("click", () => {
            const today = new Date();
            updateMonthInput(today);
        });

        // Cập nhật giá trị input và gọi hàm load
        function updateMonthInput(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            monthInput.value = `${year}-${month}`;
            loadEatingStats();
        }

        function loadEatingStats() {
            var dateValue = document.getElementById("monthInput").value;
            // Kiểm tra xem người dùng đã chọn tháng chưa, nếu chưa chọn tháng hiện tại

            if (!dateValue) {
                const today = new Date();
                const year = today.getFullYear();
                const month = String(today.getMonth() + 1).padStart(2, '0'); // Tháng bắt đầu từ 0
                dateValue = `${year}-${month}`;
            }

            const [year, month] = dateValue.split("-");

            $("#statsContainer").html('<h6>Đang tải dữ liệu...</h6>')
            $.get("/Dayly/GetDayLy", { month, year }, function (html) {
                $("#statsContainer").html(html);
                updateCurrencyDisplay();
            });
        }
        loadEatingStats();
    </script>

    <script>
        $(document).on('click','.calendar-day-card', function () {
                var date = $(this).data('date');
                var average = parseFloat($(this).data('average'));
                var spent = parseFloat($(this).data('spent'));
                var difference = parseFloat($(this).data('difference'));

                var formattedAverage = average.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                var formattedSpent = spent.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                var formattedDiff = (difference >= 0 ? "+" : "-") +
                    Math.abs(difference).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });

                var formattedDate = new Date(date).toLocaleDateString('vi-VN');

                $('#modalDate').text(formattedDate);
                $('#modalAverage').text(formattedAverage);
                $('#modalSpent').text(formattedSpent);
                $('#modalDifference').text(formattedDiff);

                if( difference >= 0) {
                    $('#modalDifference').removeClass('text-danger').addClass('text-success');
                } else {
                    $('#modalDifference').removeClass('text-success').addClass('text-danger');
                }


                $('#viewDetailBtn').off('click').on('click', function () {
                    window.location.href = `/transaction/ViewByJar?jarId=@tienAnId&fromDate=${date}&toDate=${date}`;
                });

                $('#dayDetailModal').modal('show');
            });
    </script>
    <script>
        $(document).ready(function () {
        // Nút Thêm desktop
            $('#btnAddDesktop').click(function () {
                showAddOptions();
            });

            // Nút Thêm mobile
            $('#btnAddMobile').click(function () {
                showAddOptions();
            });

            // SweetAlert2 chọn thêm loại giao dịch
            function showAddOptions() {
                Swal.fire({
                    title: 'Bạn muốn thêm gì?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Thêm Thu Nhập',
                    cancelButtonText: 'Thêm Chi Tiêu',
                    reverseButtons: true,
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger me-3'
                    },
                    buttonsStyling: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '@Url.Action("CreateIncome", "Transaction")';
                    } else if (result.dismiss === Swal.DismissReason.cancel) {
                        window.location.href = '@Url.Action("CreateExpense", "Transaction", new { jarId = tienAnId })';
                    }
                });
            }
        });
    </script>
    <script>
        function formatShortCurrency(value) {
            const absValue = Math.abs(value);
            if (absValue >= 1_000_000) {
                return (value / 1_000_000).toFixed(1).replace(/\.0$/, '') + 'tr';
            } else if (absValue >= 1_000) {
                return (value / 1_000).toFixed(1).replace(/\.0$/, '') + 'k';
            } else {
                return value.toString();
            }
        }

        function updateCurrencyDisplay() {
            const isSmallScreen = window.matchMedia("(max-width: 991px)").matches;

            $(".diff-amount").each(function () {
                const raw = parseFloat($(this).data("amount"));
                const sign = raw >= 0 ? "+" : "-";
                const formatted = isSmallScreen
                    ? sign + formatShortCurrency(Math.abs(raw))
                    : sign + new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND', maximumFractionDigits: 0 }).format(Math.abs(raw));

                $(this).text(formatted);
            });
        }



        // Run on resize
        $(window).on("resize", function () {
            updateCurrencyDisplay();
        });
    </script>

}
